@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="text-center mb-4">
                <i class="bi bi-lock-fill display-4 text-danger"></i>
                <h1 class="mt-3 fw-bold text-dark">@ViewData["Title"]</h1>
                <p class="text-muted">Ensure your account is protected by choosing a strong, unique password.</p>
            </div>

            <partial name="_StatusMessage" for="StatusMessage" />

            <div class="card shadow-lg p-4 border-0 mt-3">
                <div class="card-body">
                    <form id="change-password-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small" role="alert"></div>

                        <h5 class="fw-bold mb-3 mt-2 text-muted border-bottom pb-2">Password Fields</h5>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Old Password" />
                            <label asp-for="Input.OldPassword" class="form-label">Old Password</label>
                            <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="New Password" />
                            <label asp-for="Input.NewPassword" class="form-label">New Password</label>
                            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm New Password" />
                            <label asp-for="Input.ConfirmPassword" class="form-label">Confirm New Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 pt-3 border-top">
                            <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                                <i class="bi bi-shield-lock-fill me-2"></i> Update Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
