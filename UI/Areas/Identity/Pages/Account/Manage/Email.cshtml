@page
@model EmailModel
@{
    ViewData["Title"] = "Change Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="text-center mb-4">
                <i class="bi bi-envelope-check-fill display-4 text-primary"></i>
                <h1 class="mt-3 fw-bold text-dark">@ViewData["Title"]</h1>
            </div>

            <partial name="_StatusMessage" for="StatusMessage" />

            <div class="card shadow-lg p-4 border-0 mt-3">
                <div class="card-body">
                    <form id="email-form" method="post">

                        <div class="form-floating mb-3 input-group">
                            <input asp-for="Email" class="form-control" placeholder="Your current email." disabled />
                            <label asp-for="Email" class="form-label">Current Email</label>
                        </div>


                        <div class="form-floating mb-3">
                            <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Enter new email address." />
                            <label asp-for="Input.NewEmail" class="form-label">New Email Address</label>
                            <span asp-validation-for="Input.NewEmail" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 pt-3 border-top">
                            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-arrow-repeat me-2"></i> Change Email
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
