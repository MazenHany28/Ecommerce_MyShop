@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg p-4 border-0">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle display-4 text-primary"></i>
                        <h2 class="mt-3 fw-bold text-primary">Log In</h2>
                        <p class="text-muted">Use your local account to access the dashboard.</p>
                        <hr />
                    </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.UserName" class="form-control" aria-required="true" placeholder="username or email" />
                            <label asp-for="Input.UserName" class="form-label">Username or E-mail</label>
                            <span asp-validation-for="Input.UserName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4 d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMeCheck" />
                                <label class="form-check-label" asp-for="Input.RememberMe" for="rememberMeCheck">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Log in
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-3 pt-3 border-top">
                        <p class="mb-1">
                            <a asp-page="./RegisterChoice"  class="text-decoration-none fw-bold">
                                <i class="bi bi-person-plus me-1"></i> Register as a new user
                            </a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
