
@{
    ViewData["Title"] = "Shopping Cart";
}

<!-- Cart Section -->
<section class="cart-section py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Shopping Cart</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Products")">Products</a></li>
                    <li class="breadcrumb-item active">Cart</li>
                </ol>
            </nav>
        </div>

        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Cart Items</h5>
                        @* <span class="badge bg-primary">@Model.CartItems.Sum(x => x.Quantity) items</span> *@
                    </div>
                    <div class="card-body p-0">
                        <div id="cart-items">
                            @if (!Model.CartItems.Any())
                            {
                                <div class="text-center py-5" id="empty-cart-message">
                                    <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                                    <h3 class="text-muted">Your cart is empty</h3>
                                    <p class="text-muted mb-4">Browse our products and add items to your cart</p>
                                    <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg">Continue Shopping</a>
                                </div>
                            }
                            else
                            {
                                foreach (var item in Model.CartItems)
                                {
                                    <div class="cart-item d-flex align-items-center p-3 border-bottom">
                                        <div class="flex-shrink-0">
                                            <img src="@item.ImageUrl" alt="@item.Name" class="cart-item-image rounded">
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h5 class="mb-1">@item.Name</h5>
                                                <button class="btn btn-outline-danger btn-sm" onclick="removeFromCart(@item.ProductId)" title="Remove item">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                            <p class="text-muted mb-2 small">@item.Description</p>
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div class="quantity-controls d-flex align-items-center">
                                                    <span class="me-2 small">Qty:</span>
                                                    <button class="quantity-btn" onclick="updateCartQuantity(@item.ProductId, @(item.Quantity - 1))">
                                                        <i class="fas fa-minus"></i>
                                                    </button>
                                                    <input type="number" class="quantity-input mx-2" value="@item.Quantity" min="1" max="10"
                                                           onchange="updateCartQuantity(@item.ProductId, parseInt(this.value))">
                                                    <button class="quantity-btn" onclick="updateCartQuantity(@item.ProductId, @(item.Quantity + 1))">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                                <div class="price-section text-end">
                                                    <strong class="text-success d-block">$@((item.Price * item.Quantity).ToString("F2"))</strong>
                                                    <small class="text-muted">$@item.Price.ToString("F2") each</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span id="cart-subtotal">$@Model.Subtotal.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span id="cart-shipping">$@Model.ShippingCost.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax:</span>
                            <span id="cart-tax">$@Model.Tax.ToString("F2")</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong id="cart-total">$@Model.Total.ToString("F2")</strong>
                        </div>

                        <!-- Checkout Button -->
                        <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary w-100 mb-2 py-2" @(!Model.CartItems.Any() ? "disabled" : "")>
                            <i class="fas fa-lock me-2"></i>Proceed to Checkout
                        </a>
                        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-secondary w-100 py-2">
                            <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>

                <!-- Security Badges -->
                <div class="card">
                    <div class="card-body text-center">
                        <h6 class="card-title mb-3">Secure Checkout</h6>
                        <div class="d-flex justify-content-center mb-3">
                            <i class="fas fa-lock fa-2x text-success me-3"></i>
                            <i class="fab fa-cc-visa fa-2x text-primary me-3"></i>
                            <i class="fab fa-cc-mastercard fa-2x text-primary me-3"></i>
                            <i class="fab fa-cc-paypal fa-2x text-primary"></i>
                        </div>
                        <p class="small text-muted mt-2 mb-0">Your payment information is secure and encrypted</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/cart.js"></script>
}