@using BLL.DTOs.Categories
@model AddCategoryDto

@{
    ViewData["Title"] = "Create Category";
}

<div class="container py-5">
    <div class="row justify-content-center">

        <div class="col-12 text-center mb-4">
            <h1 class="display-5 fw-bold text-success">Create</h1>
            <h4 class="text-muted">New Category</h4>
            <hr class="w-50 mx-auto" />
        </div>

        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <form asp-action="CreateCategory" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Provide a brief description of the category"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Create Category" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="CategoryIndex" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Categories
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}