@using BLL.DTOs.Orders
@model IEnumerable<GetOrderDto>

@{
    ViewData["Title"] = "Orders";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h1 class="display-4 fw-bold text-dark">Order Index</h1>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover table-bordered caption-top">


            <thead class="table-info">
                <tr>
                    <th scope="col" class="text-start">
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PaymentProvider)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PaymentTransactionId)
                    </th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-start fw-bold">
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @item.OrderDate.ToString("dd/MM/yyyy HH:mm:ss")
                        </td>
                        <td>
                            <span class="badge bg-success fs-6">
                                @Html.DisplayFor(modelItem => item.Total)
                            </span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentProvider)
                        </td>
                        <td class="small text-muted">
                            @Html.DisplayFor(modelItem => item.PaymentTransactionId)
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="OrderDetails" asp-route-id="@item.Id" class="btn btn-info text-white">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="DeleteOrder" asp-route-id="@item.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>