@using BLL.DTOs.Orders
@model GetOrderDetailsDto

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container py-5">

    <div class="row justify-content-center text-center mb-4">
        <div class="col-lg-8">
            <h1 class="display-4 fw-bold text-danger mb-3">Delete Order</h1>
            <h3 class="text-warning-emphasis">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Are you sure you want to delete this order?
            </h3>
            <p class="text-danger mt-3 fw-bold">Order ID: @Model.Id</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-danger mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-5 fw-bold">
                            @Html.DisplayNameFor(model => model.CustomerName)
                        </dt>
                        <dd class="col-sm-7 fs-5 fw-bold">
                            @Html.DisplayFor(model => model.CustomerName)
                        </dd>

                        <dt class="col-sm-5 fw-bold">
                            @Html.DisplayNameFor(model => model.OrderDate)
                        </dt>
                        <dd class="col-sm-7">
                            @Model.OrderDate.ToString("MMMM dd, yyyy h:mm tt")
                        </dd>

                        <dt class="col-sm-5 fw-bold">
                            @Html.DisplayNameFor(model => model.Total)
                        </dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-success fs-6">@Html.DisplayFor(model => model.Total)</span>
                        </dd>

                        <dt class="col-sm-5 fw-bold">
                            @Html.DisplayNameFor(model => model.PaymentProvider)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.PaymentProvider)
                        </dd>

                        <dt class="col-sm-5 fw-bold">
                            @Html.DisplayNameFor(model => model.PaymentTransactionId)
                        </dt>
                        <dd class="col-sm-7 small text-break">
                            @Html.DisplayFor(model => model.PaymentTransactionId)
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-lg-6 col-md-8 text-center">
            <form asp-action="DeleteOrder" method="post">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger btn-lg me-3 shadow">
                    <i class="bi bi-trash-fill me-1"></i> Confirm Delete
                </button>

                <a asp-action="OrderIndex" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>