
@section Styles{
    
}


<div class="container py-5">
    <h1 class="text-center display-5 mb-5 fw-bold text-dark">Admin Dashboard</h1>

    <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">

        <div class="col dashboard-item">
            <div class="card h-100 shadow-lg border-primary text-center">
                <div class="card-body d-flex flex-column justify-content-between p-4">
                    <i class="bi bi-box-seam display-4 text-primary mb-3"></i>
                    <h5 class="card-title fs-4 fw-bold mb-3">Products</h5>
                    <a asp-action="ProductIndex" class="btn btn-primary btn-lg rounded-pill stretched-link">
                        Manage Products
                    </a>
                </div>
            </div>
        </div>

        <div class="col dashboard-item">
            <div class="card h-100 shadow-lg border-secondary text-center">
                <div class="card-body d-flex flex-column justify-content-between p-4">
                    <i class="bi bi-tags-fill display-4 text-secondary mb-3"></i>
                    <h5 class="card-title fs-4 fw-bold mb-3">Categories</h5>
                    <a asp-action="CategoryIndex" class="btn btn-secondary btn-lg rounded-pill stretched-link">
                        Manage Categories
                    </a>
                </div>
            </div>
        </div>

        <div class="col dashboard-item">
            <div class="card h-100 shadow-lg border-success text-center">
                <div class="card-body d-flex flex-column justify-content-between p-4">
                    <i class="bi bi-cart-check-fill display-4 text-success mb-3"></i>
                    <h5 class="card-title fs-4 fw-bold mb-3">Orders</h5>
                    <a asp-action="OrderIndex" class="btn btn-success btn-lg rounded-pill stretched-link">
                        Manage Orders
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>


