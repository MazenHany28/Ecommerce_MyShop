@using BLL.DTOs.Categories
@model UpdateCategoryDto

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container py-5">
    <div class="row justify-content-center">

        <div class="col-12 text-center mb-4">
            <h1 class="display-5 fw-bold text-warning">Edit</h1>
            <h4 class="text-muted">Category Details</h4>
            <hr class="w-50 mx-auto" />
        </div>

        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <form asp-action="EditCategory" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-grid gap-2">
                            <input type="submit" value="Save Changes" class="btn btn-warning btn-lg text-white" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="CategoryIndex" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Categories
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}