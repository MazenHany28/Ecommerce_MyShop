@using BLL.DTOs.Products
@model GetProductWithDetailsDto

@{
    ViewData["Title"] = "Delete";
}


<div class="container py-5">

    <div class="row justify-content-center text-center mb-4">
        <div class="col-lg-8">
            <h1 class="display-4 fw-bold text-danger mb-3">Delete Product</h1>
            <h3 class="text-warning-emphasis">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Are you sure you want to delete this product?
            </h3>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-danger mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">Product Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 fw-bold">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt class="col-sm-3 fw-bold">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <dt class="col-sm-3 fw-bold">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-success fs-6">@Html.DisplayFor(model => model.Price)</span>
                        </dd>

                        <dt class="col-sm-3 fw-bold">
                            @Html.DisplayNameFor(model => model.Stock)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Stock)
                        </dd>

                        <dt class="col-sm-3 fw-bold">
                            Image
                        </dt>
                        <dd class="col-sm-9">
                            <img src="~/@Model.ImageUrl" class="img-fluid rounded shadow-sm" style="max-width:200px; height:auto;" alt="Product Image" />
                        </dd>

                        <dt class="col-sm-3 fw-bold">
                            @Html.DisplayNameFor(model => model.AddedByUser)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.AddedByUser)
                        </dd>

                        <dt class="col-sm-3 fw-bold">
                            @Html.DisplayNameFor(model => model.Category)
                        </dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info text-dark">@Html.DisplayFor(model => model.Category)</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-lg-8 col-md-10 text-center">
            <form asp-action="DeleteProduct" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImageUrl" />

                <button type="submit" class="btn btn-danger btn-lg me-3 shadow">
                    <i class="bi bi-trash-fill me-1"></i> Confirm Delete
                </button>

                <a asp-action="ProductIndex" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>


