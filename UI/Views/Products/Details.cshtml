@using UI.ViewModels.Products
@model ProductDetailsViewModel
@{
    ViewData["Title"] = Model.Name;
}

<!-- Product Details Section -->
<section class="product-details py-5">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Products")">Products</a></li>
                <li class="breadcrumb-item active">@Model.Category</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-6">
                <div class="product-gallery">
                    <img src="~/@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-3" id="main-product-image">
                </div>
            </div>
            <div class="col-md-6 align-self-center">
                <div class="product-info">
                    <h1 class="product-title">@Model.Name</h1>

                    <div class="price-section mb-3">
                        <h2 class="text-success">$@Model.Price.ToString("F2")</h2>
                    </div>

                    <p class="lead">@Model.Description</p>

                    <div class="product-actions mb-4">
                        <div class="d-flex align-items-center gap-3">
                            <div class="quantity-controls">
                                <label for="quantity" class="form-label me-2">Quantity:</label>
                                <div class="input-group" style="width: 140px;">
                                    <button class="btn btn-outline-secondary quantity-btn" type="button" onclick="decreaseQuantity()">-</button>
                                    <input type="number" class="form-control text-center quantity-input" id="quantity" value="1" min="1" max="100">
                                    <button class="btn btn-outline-secondary quantity-btn" type="button" onclick="increaseQuantity()">+</button>
                                </div>
                            </div>

                            <button class="btn btn-add-to-cart flex-grow-1" onclick="addToCartFromDetails(@Model.Id)">
                                <i class="fas fa-cart-plus me-2"></i>Add to Cart
                            </button>
                        </div>
                    </div>


                </div>
            </div>
        </div>

        <!-- Product Tabs -->
        <div class="row mt-5">
            <div class="col-12">
                <ul class="nav nav-tabs" id="productTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab">Description</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="specifications-tab" data-bs-toggle="tab" data-bs-target="#specifications" type="button" role="tab">Specifications</button>
                    </li>
                </ul>
                <div class="tab-content p-3 border border-top-0" id="productTabsContent">
                    <div class="tab-pane fade show active" id="description" role="tabpanel">
                        <p>@Model.Description</p>
                    </div>
                    <div class="tab-pane fade" id="specifications" role="tabpanel">
                        <table class="table">
                            <tr>
                                <th>Category</th>
                                <td>@Model.Category</td>
                            </tr>
                            <tr>
                                <th>CategoryDescription</th>
                                <td>@Model.CategoryDescription</td>
                            </tr>
                       
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <script src="~/js/product-details.js"></script>
}